
$module_info = {
	'help' => [
		"Usage: topics",
		"Description: Displays a list of topic categories"
	]
};

sub do_topics {
	local($irc, $msg, $privs) = @_;

	$file = $msg->{'channel'};
	$file =~ s/^\#//;
	$file = "../etc/$file/topics.lst";
	$file = "../etc/topics.lst" unless (-e $file);

	open(FILE, $file) or return(-1);
	my $topics = <FILE>;
	$topics = strip_return($topics);
	close(FILE);
	irc_private_msg($irc, $msg->{'respond'}, $topics);
	return(0);
}

