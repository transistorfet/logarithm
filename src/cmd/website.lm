
$module_info = {
	'help' => [
		"Usage: website [<channel>]",
		"Description: Displays the website for channel (current if unspecified)"
	]
};

sub do_website {
	local($irc, $msg, $privs) = @_;

	my $website = (channel_get_option($irc->{'channels'}, $msg->{'params'}->[0], "website", ""))[0];

	if ($website) {
		irc_private_msg($irc, $msg->{'respond'}, "$website");
	}
	else {
		irc_notice($irc, $msg->{'nick'}, "Sorry, No Website For This Channel");
	}
	return(0);
}

