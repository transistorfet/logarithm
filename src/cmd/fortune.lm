#
# Command Name:	fortune.lm
# Version:	0.1
# Package:	Unix Utilities
#

$module_info = {
	'help' => [
		"Usage: fortune",
		"Description: Displays a random fortune"
	]
};

sub do_fortune {
	local($irc, $msg, $privs) = @_;

	return(-10) if ($privs < 1);

	foreach (`fortune -a`) {
		$_ = strip_return($_);
		irc_private_msg($irc, $msg->{'respond'}, $_);
	}
	return(0);
}
