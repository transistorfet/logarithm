
$module_info = {
	'help' => [
		"Usage: random [<number>]",
		"Description: Displays a random number between 0 and number (100 if unspecified)"
	]
};

sub do_random {
	local($irc, $msg, $privs) = @_;

	my $max = 100;
	$max = $msg->{'params'}->[1] if ($msg->{'params'}->[1]);
	irc_private_msg($irc, $msg->{'respond'}, int(rand($max)));
	return(0);
}
